            <column name="valor_5_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_6_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_7_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_8_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_9_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_10_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_11_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_12_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="impuesto" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="foto" type="longblob">
                <constraints nullable="false" />
            </column>
            <column name="foto_content_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="video" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="video_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="sede_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="tipo_recurso_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>

    <changeSet id="20190819163007-1-relations" author="jhipster">

    </changeSet>
