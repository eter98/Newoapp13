            </column>

            <column name="tipo" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="unidad_medida" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="valor_unitario" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="valor_1_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_2_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_3_h" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="valor_4_h" type="integer">
                <constraints nullable="true" />
